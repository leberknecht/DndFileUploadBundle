'@DndFileUploadBundle/Resources/public/js/class.UploadThreadWrapper.js'
'@DndFileUploadBundle/Resources/public/js/bind.js'
%}
<script type="text/javascript" src="{{ asset('bun') }}"></script>
{% endjavascripts %}

{% stylesheets
'@DndFileUploadBundle/Resources/public/css/*.css'
%}
